{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["es2020"],
    "module": "ES2020",
    "target": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules"],
}